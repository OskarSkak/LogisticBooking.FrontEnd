@page
@using Microsoft.AspNetCore.Localization
@model LogisticsBooking.FrontEnd.Pages.Profile.ProfileViewModel

@inject CommonLocalizationService localizer


@{
    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
    var culture = CultureInfo.CurrentCulture.Name;
    }

<style>
    .inner {
        display: table;
        margin: 0 auto;
    }
    
</style>

<h1 align="center">Indstillinger</h1>

<div class="row">
  
    <div class="ml-3 col-xl-3">

        <div class="list-group">
            <button id="UpdateClick" type="button" class="list-group-item list-group-item-action">Opdater Brugerdata</button>
            <button id="UsersClick" type="button" class="list-group-item list-group-item-action">Administrer Brugere</button>
            <button id="PasswordClick" type="button" class="list-group-item list-group-item-action">Opdater Password</button>
            <button id="langClick" type="button" class="list-group-item list-group-item-action">Sprog</button>
            <button id="CreateClick" type="button" class="list-group-item list-group-item-action">Opret Bruger</button>
            <button id="SchedulesClick" type="button" class="list-group-item list-group-item-action">Schedules</button>
        </div>

    </div>
    <div id="update" class="d-none col-xl-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Opdater brugerdata</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div id="" class=" d d-flex justify-content-between col-xl-9">
                        <form asp-page-handler="Update">
                            <div class="form-group">
                                <label >Navn</label>
                                <input asp-for="LoggedInUser.Name" name="LoggedInUser.Name" type="text" class="form-control" value="@Model.LoggedInUser.Name"> <br/>
                            </div>
                            <div class="form-group">
                                <label >Email</label>
                                <input asp-for="LoggedInUser.Email" name="LoggedInUser.Email" class="form-control" value="@Model.LoggedInUser.Email"> <br/>
                            </div>
                            <div class="form-group">
                                <p>Kontor </p>
                                <input asp-for="OfficeRoleIsChecked"/>
                            </div>
                            <div class="form-group">
                                <p>Standard medarbejder</p>
                                <input asp-for="ClientRoleIsChecked"/>
                            </div>
                            <div class="form-group">
                                <p>Lager </p>
                                <input asp-for="WareHouseRoleIsChecked"/>
                                <br/>
                            </div>
                            <div class="form-group">
                                <p>Transportør </p>
                                <input asp-for="TransporterRoleIsChecked"/>
                            </div>
                            
                            <input type="hidden" asp-for="LoggedInUser.ApplicationUserId" name="LoggedInUser.ApplicationUserId"/>
                            <button type="submit" class="btn btn-primary">Opdater din brugerdata</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div id="create" class="d-none col-xl-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Opret Bruger</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div id="" class=" d d-flex justify-content-between col-xl-9">
                        <div class="inner">
                            <form asp-page-handler="Create">
                                <div class="form-group">
                                    <label >Navn</label>
                                    <input asp-for="@Model.CreateUserCommand.Name" type="text" class="form-control"> <br/>
                                </div>
                                <div class="form-group">
                                    <label >Email</label>
                                    <input asp-for="@Model.CreateUserCommand.Email" type="email" class="form-control" > <br/>
                                </div>
                                <div class="form-group">
                                    <label>Rolle</label>
                                    <select class="form-control" asp-for="CreateUserCommand.Role" asp-items="Model.Roles"></select><br/>
                                </div>
                                <button type="submit" class="btn btn-primary">Opret</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div id="password" class="d-none col-xl-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Opdater Password</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div id="" class=" d d-flex justify-content-center col-xl-9">
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
        <div id="users" class="d-none col-xl-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Administrer Brugere</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var user in Model.ApplicationUserViewModels.ApplicationUserViewModels)
                            {
                                <tr>
                                    <td>
                                        @user.Name
                                    </td>
                                    <td><a asp-page="UserSingle" asp-route-id="@user.ApplicationUserId">@user.Email</a></td>
                                    <td>
                                        @foreach (var role in user.ActiveRoles)
                                        {
                                            @role.Name
                                            @: <text> , </text>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <div class="col-xs-12 col-md-1 ">
                        </div>
        
                    </div>
                </div>
            </div>
        </div>
    
    <div id="language" class="d-none col-xl-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Sprog</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Dropdown Header:</div>
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>
            </div>    
            <div class="card-body">
                <div class="row">
                    <div id="" class=" d d-flex justify-content-between col-xl-9">
                    <p>Vælg sprog</p>
                        @await Component.InvokeAsync("CultureSwitcher")
                    </div>
                </div>
            </div>
        </div>
    </div>
    
     <div id="schedules" class="d-none col-xl-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Indstillinger</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Dropdown Header:</div>
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
    
                        <div id="" class=" d d-flex justify-content-center col-xl-9">
    
                            <p>Shedules</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>

@section Scripts
{

    <script>
    $('#PasswordClick').on('click', function(){
        $('.d').each(function(i, obj) {
            $(this).addClass('d-none')
           
        });
      
        $('.active').each(function(i, obj) {
                            $(this).removeClass('active')
                          
                        });
        
  
      
        $('#PasswordClick').addClass('active');
         $('#password').addClass('d');
        $('#password').removeClass('d-none');
        
    });
    
    $('#CreateClick').on('click', function(){
        $('.d').each(function(i, obj) {
            $(this).addClass('d-none')
           
        });
      
        $('.active').each(function(i, obj) {
            $(this).removeClass('active')
                          
        });
        
  
      
        $('#CreateClick').addClass('active');
        $('#create').addClass('d');
        $('#create').removeClass('d-none');
        
    });
    
    $('#UpdateClick').on('click', function(){
            $('.d').each(function(i, obj) {
                $(this).addClass('d-none')
                 
            });
            
            $('.active').each(function(i, obj) {
                                $(this).removeClass('active')
                              
                            });
            $('#UpdateClick').addClass('active');
            $('#update').removeClass('d-none');
             $('#update').addClass('d');
            
        });
    
    $('#UsersClick').on('click', function(){
        $('.d').each(function(i, obj) {
            $(this).addClass('d-none')
                 
        });
            
        $('.active').each(function(i, obj) {
            $(this).removeClass('active')
                              
        });
        $('#UsersClick').addClass('active');
        $('#users').removeClass('d-none');
        $('#users').addClass('d');
            
    });
    
    $('#langClick').on('click', function(){
        $('.d').each(function(i, obj) {
            $(this).addClass('d-none')
           
        });
      
        $('.active').each(function(i, obj) {
            $(this).removeClass('active')
                          
        });
        
  
      
        $('#langClick').addClass('active');
        $('#language').addClass('d');
        $('#language').removeClass('d-none');
        
    });
    
    $('#SchedulesClick').on('click', function(){
        $('.d').each(function(i, obj) {
            $(this).addClass('d-none')
                 
        });
            
        $('.active').each(function(i, obj) {
            $(this).removeClass('active')
                              
        });
        $('#SchedulesClick').addClass('active');
        $('#schedules').removeClass('d-none');
        $('#schedules').addClass('d');
            
    });
    </script>
}
