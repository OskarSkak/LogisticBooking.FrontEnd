@page
@model LogisticsBooking.FrontEnd.Pages.superadmin.superadmin

@{
    Layout = "_Layout_superadmin";
}


@if (Model.IsMessageFilled)
{
    <div class="alert alert-success">
        <strong>@Model.Message</strong> 
    </div>
} 


<div class="row">
    <div class="col-xl-4 col-lg-4">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@localizer.Get("Standard plans")</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Dropdown Header:</div>
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="row">
                    <div class="mx-auto col-lg-6 col-10">
                        <div class="content">
                            <form asp-page-handler="CreateCustomer">
                                <div class="form-group">
                                    <label >Navn</label>
                                    <input class="form-control" asp-for="@Model.CreateCustomerCommand.Name"/>
                                </div>
                                <div class="form-group">
                                    <label >Email</label>
                                    <input class="form-control" asp-for="@Model.CreateCustomerCommand.Email"/>
                                </div>
                                <div class="form-group">
                                    <label >Addresse</label>
                                    <input class="form-control" asp-for="@Model.CreateCustomerCommand.DeliveryAddress"/>
                                </div>
                                <div class="form-group">
                                    <label >Telefon</label>
                                    <input class="form-control" asp-for="@Model.CreateCustomerCommand.TelephoneNumber"/>
                                </div>
                                <div class="form-group">
                                    <label >Kontakt Person</label>
                                    <input class="form-control" asp-for="@Model.CreateCustomerCommand.ContactPerson"/>
                                </div>


                                <button type="submit" class="btn btn-primary">opret</button>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>