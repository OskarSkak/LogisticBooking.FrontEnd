@page
@model LogisticsBooking.FrontEnd.Pages.Transporter.Booking.confirm

@{
    Layout = "_Layout_Transporter";
}



<div class="py-1" style="">
    <div class="container">
  <div class="md-stepper-horizontal blue">
      <div class="md-step active ">
        <div class="md-step-circle"><span></span><i class="fas fa-check"></i></div>
       <div class="md-step-title">@localizer.Get("Delivery day")</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step active ">
          <div class="md-step-circle"><i class="fas fa-check"></i></div>
<div class="md-step-title">@localizer.Get("Create order")</div>
          <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step active ">
        <div class="md-step-circle"><i class="fas fa-check"></i></div>
                <div class="md-step-title">@localizer.Get("Delivery time")</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
      <div class="md-step active">
        <div class="md-step-circle"><i class="fas fa-check"></i></div>
       <div class="md-step-title">@localizer.Get("Completed")</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
      </div>
    </div>
    </div>
</div>  

<div class="py-1 text-center" style="">
    <div class="container text-center">
        <div class="row text-center" >
            <div class="mx-auto p-4 col-lg-7">
                <h1>@localizer.Get("The booking is completed")</h1>
            </div>
        </div>
        <div class="row" >
            <div class="mx-auto p-4 col-lg-7">
                <h3>@localizer.Get("You will recieve an email with all the details")</h3>
            </div>
        </div>
    </div>
</div>
