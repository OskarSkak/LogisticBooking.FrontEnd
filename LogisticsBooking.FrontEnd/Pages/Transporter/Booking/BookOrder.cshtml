@page
@using System.Xml.Linq
@model LogisticsBooking.FrontEnd.Pages.Transporter.Booking.BookOrder

@{
    Layout = "_Layout_Transporter";
}
<style>
.popover> .arrow {
    border-width: 16px;
}
    
    </style>


@if (Model.ShowMessage)
{
    <div class="alert alert-danger">
        <strong>@Model.ScheduleAvailableMessage</strong>
        <strong>@Model.ModelStateMessage</strong>
    </div>
}

<div class="py-1" style="">
    <div class="container">
        <div class="md-stepper-horizontal blue">
            <div class="md-step active ">
                <div class="md-step-circle">
                    <span></span><i style="transform: scaleX(-1);" class="fas fa-pencil-alt"></i>
                </div>
                <div class="md-step-title">@localizer.Get("Delivery day")</div>
                <div class="md-step-bar-left"></div>
                <div class="md-step-bar-right"></div>
            </div>
            <div class="md-step ">
                <div class="md-step-circle">
                    <span>2</span>
                </div>
                <div class="md-step-title">@localizer.Get("Create order")</div>
                <div class="md-step-bar-left"></div>
                <div class="md-step-bar-right"></div>
            </div>
            <div class="md-step ">
                <div class="md-step-circle">
                    <span>3</span>
                </div>
                <div class="md-step-title">@localizer.Get("Delivery time")</div>
                <div class="md-step-bar-left"></div>
                <div class="md-step-bar-right"></div>
            </div>
            <div class="md-step">
                <div class="md-step-circle">
                    <span>4</span>
                </div>
                <div class="md-step-title">@localizer.Get("Completed")</div>
                <div class="md-step-bar-left"></div>
                <div class="md-step-bar-right"></div>
            </div>
        </div>
    </div>
</div>
<div class="py-1" style="">
    <div class="container">
        <div class="row">
            <div class="mx-auto p-4 col-lg-8 card">

                <form method="post">

                    <div class="input-group mb-3">
                        <input readonly="readonly" type="text"  name="bookingTime"  class="date form-control" placeholder="Leveringsdato">
                        <div class="input-group-prepend">
                            <span class="input-group-text" data-toggle="popover" title="@localizer.Get("Delivery day")" data-content="@localizer.Get("Select the delivery day")">
                                <i class="fas fa-question"></i>
                            </span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for="BookingViewModel.TotalPallets" type="number" class="form-control" placeholder="@localizer.Get("Bottom pallets")"/>

                        <div class="input-group-prepend">
                            <span class="input-group-text" data-toggle="popover" title="@localizer.Get("Bottom pallets")" data-content="@localizer.Get("Select how many pallets there are on this booking. Max is 33 pallets")">
                                <i class="fas fa-question"></i>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="BookingViewModel.TotalPallets" class="text-danger small"></span>

                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-lg btn-success">@localizer.Get("Confirm")</button>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
    
$(function() {
    $(document).popover({
        selector: '[data-toggle=popover]',
        trigger: 'focus'
    });
});
    
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/js/DateRingePicker.js">
 
    
    </script>
}