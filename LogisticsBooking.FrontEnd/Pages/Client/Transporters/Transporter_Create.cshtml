@page
@model LogisticsBooking.FrontEnd.Pages.Client.Transporters.Transporter_CreateModel
@{
}

<div class="row">
    <div class="col">
        
        <h1>@localizer.Get("Create Transporter")</h1>
    </div>
    
</div>

<div class="row">
    <div class="col-xl-2">
        
    </div>
    <div class="col-xl-8">
        <div class="card mb-4">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="mx-auto col-lg-6 col-10">
                        <div class="content">
                            <form asp-page-handler="Create">
                                <div class="form-group">
                                    <label >@localizer.Get("Name")</label>
                                    <input asp-for="@Model.TransporterViewModel.Name" type="text" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <label >Email</label>
                                    <input asp-for="@Model.TransporterViewModel.Email" type="email" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <label >@localizer.Get("Address")</label>
                                    <input asp-for="@Model.TransporterViewModel.Address" type="text" class="form-control" >
                                </div>
                                <div class="form-group">
                                    <label >@localizer.Get("Telephone number")</label>
                                    <input asp-for="@Model.TransporterViewModel.Telephone" type="text" class="form-control" >
                                </div>
                                        
                
                                        
                
                                        
                                                    
                                                    
                                <button type="submit" class="btn btn-primary">@localizer.Get("Create")</button>
                            </form>
                                                
                        </div>
                                
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2">
        
    </div>
</div>










       