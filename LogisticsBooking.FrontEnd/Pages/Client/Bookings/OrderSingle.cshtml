@page "{id}"
@model LogisticsBooking.FrontEnd.Pages.Client.Bookings.OrderSingleModel

@{
    ViewData["Title"] = "Home page";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2"></div>
        <div class="col-xl-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Booking</h6>
                </div>
                <div class="card-body">
                    <p class="mb-3">@localizer.Get("Update the desired information by edit in the fields and click 'update'")</p>
                                    <form method="post" class="text-left">
                                        <div class="form-group"> <label for="form18">@localizer.Get("Comment")</label> <input asp-for="OrderViewModel.Comment" class="form-control" id="form18" name="ViewComment"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("Customer number")</label> <input asp-for="OrderViewModel.CustomerNumber" class="form-control" id="form18" name="ViewCustomerNumber"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("Order number")</label> <input asp-for="OrderViewModel.OrderNumber" class="form-control" id="form18" name="ViewOrderNumber"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("Bottom pallets")</label> <input asp-for="OrderViewModel.BottomPallets"  class="form-control" id="form18" name="ViewBottomPallets"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("Order") id</label> <input asp-for="OrderViewModel.ExternalId" class="form-control" id="form18" name="ViewExternalId"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("Number of pallets")</label> <input asp-for="OrderViewModel.TotalPallets"  class="form-control" id="form18" name="ViewTotalPallets"> </div>
                                        <div class="form-group"> <label for="form18">@localizer.Get("In/Out")</label> <input asp-for="OrderViewModel.InOut"  class="form-control" id="form18" name="ViewInOut"> </div>
                                        <div class="form-group"> <label for="form18"></label> <input asp-for="OrderViewModel.OrderId" type="hidden"  class="form-control" id="form18" name="id" value="@Model.OrderViewModel.OrderId"> </div>
                                        <div class="row d-flex justify-content-end">
                                        <button type="submit" asp-page-handler="Update" class="btn btn-lg btn-info m-2" Opdater value="Opdater">@localizer.Get("Update")</button>
                                        <div class="btn btn-lg btn-danger m-2"  data-toggle="modal" data-target="#opret">@localizer.Get("Delete")</div>
                                        </div>
                                        <input type="hidden" name="bookingId" value="@Model.BookingId"/>
                                    </form>


                </div>
            </div>
        </div>


        <div class="col-xl-2"></div>

    </div>
</div>





<div class="modal fade" id="opret" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@localizer.Get("Delete Order") </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                  <p class="spaced-typography">@localizer.Get("You are about to delete this booking. This is a permanently action. Click 'confirm' to continue with this action")</p>
      </div>
        <div class="modal-footer">
             <form asp-page-handler="delete" method="post">
<input type="hidden" name="bookingId" value="@Model.BookingId"/>
                       <button class="btn btn-danger">@localizer.Get("Confirm")</button>
<button class="btn btn-outline-info"data-dismiss="modal" >@localizer.Get("Close")</button>
                   </form>
        </div>
    </div>
  </div>
</div>




@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    

    <script>
        $(function () {
            $("#example").DataTable();
        });

    </script>

    <script>
        $(window).load(function () {
            $(".trigger_popup_fricc").click(function () {
                $('.hover_bkgr_fricc').show();
            });
            $('.hover_bkgr_fricc').click(function () {
                $('.hover_bkgr_fricc').hide();
            });
            $('.popupCloseButton').click(function () {
                $('.hover_bkgr_fricc').hide();
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var options = {
                inlineCss: false
            };
            $("a.six").on("click", function (e) {
                e.preventDefault();
                $(this).simplePopup(options);
            });
        });
    </script>
}