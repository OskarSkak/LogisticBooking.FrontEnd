@page
@model LogisticsBooking.FrontEnd.Pages.Client.Transporters.TransporterDetail


@if (Model.ShowOkResponseMessage)
{
    <div class="alert alert-success">
        <strong>@Model.ResponseOkMessage</strong> 
    </div>
} 

@if (Model.ShowFailResponseMessage)
{
    <div class="alert alert-danger">
        <strong>@Model.ResponseFailMessage</strong> 
    </div>
} 




<div class="py-5 text-center">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-lg-6 col-10">
                <h1>@localizer.Get("Existing transporter")</h1>
                <p class="mb-3">@localizer.Get("Update the desired information by edit in the fields and click 'update'")</p>
                <form method="post" class="text-left">
                    <div class="form-group"> 
                        <label for="form16">@localizer.Get("Name")</label>
                        <input asp-for="TransporterViewModel.Name" class="form-control" />
                        
                    </div>
                    <input type="hidden" asp-for="TransporterViewModel.TransporterId"/>
                    <div class="form-group"> <label for="form18">Email</label> <input asp-for="TransporterViewModel.Email" type="email" class="form-control" id="form18"  > </div>
                    <div class="form-group"> <label for="form18">@localizer.Get("Address")</label> <input asp-for="TransporterViewModel.Address" class="form-control" id="form18" > </div>
                    <div class="form-group"> <label for="form18">@localizer.Get("Telephone number")</label> <input asp-for="TransporterViewModel.Telephone" class="form-control" id="form18"  > </div>
                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-5">
                                <label> @localizer.Get("Active customers")</label>
                                <select class="form-control" asp-for="ActiveSelectedSupplier" asp-items="Model.ActiveTransportersSelectList"></select>
                            </div>
                            <div class="col-2 ">
                                
                                <button asp-page-handler="AddSupplier" class=" mt-5 m-2 btn btn-primary btn-sm">@localizer.Get("Add")</button>
                                <button asp-page-handler="RemoveSupplier" class=" m-2 btn btn-primary btn-sm">@localizer.Get("Remove")</button>
                            </div>
                            <div class="col-5">
                                 <label> @localizer.Get("All customers")</label>
                                <select class="form-control" asp-for="SelectedSupplier" asp-items="@Model.SelectList"></select>
                            </div>
                        </div>
                        
                  
                    </div>
                    
                    <div class="form-group">
                       
                        
                    </div>
                    

                    <Button type="submit" asp-page-handler="Update" class="btn btn-primary"  >@localizer.Get("Update")</Button>
                 
                </form>
          
                
              
            </div>
        </div>
    </div>
</div>




